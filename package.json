{
    "name": "@step-security/setup-jfrog-cli",
    "version": "4.8.1",
    "private": true,
    "description": "Setup JFrog CLI in GitHub Actions",
    "main": "dist/index.js",
    "engines": {
        "npm": ">=10.0.0",
        "node": ">=20.0.0"
    },
    "scripts": {
        "build": "npm run compile && npm run package",
        "compile": "tsc",
        "package": "ncc build lib/main.js -o dist --source-map --license licenses.txt && ncc build lib/cleanup.js -o dist/post --source-map --license licenses.txt",
        "format": "npx prettier --write **/*.ts",
        "format-check": "npx prettier --check **/*.ts",
        "lint": "npx eslint -c .eslintrc.js --ext .ts src",
        "test": "npx jest --colors"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/step-security/setup-jfrog-cli.git"
    },
    "keywords": [
        "cli",
        "xray",
        "step-security",
        "bintray",
        "jfrog-cli",
        "artifactory",
        "mission-control"
    ],
    "author": "step-security",
    "license": "Apache-2.0",
    "dependencies": {
        "@actions/core": "~1.10.1",
        "@actions/exec": "~1.1.1",
        "@actions/github": "^6.0.0",
        "@actions/http-client": "~2.2.1",
        "@actions/tool-cache": "~2.0.1",
        "@octokit/core": "^5.2.0",
        "axios": "^1.13.2",
        "js-yaml": "^4.1.0",
        "semver": "~7.7.3"
    },
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/semver": "^7.7.1",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "@vercel/ncc": "^0.38.4",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^8.10.0",
        "jest": "^29.7.0",
        "prettier": "^3.3.2",
        "ts-jest": "^29.1.4",
        "typescript": "^5.4.5"
    }
}
